<div class="row">
  <div class="col-sm-4"></div>
  <div class="col" width="250px">
    <img src="/img/burger.png" width="250px">
    <h1>Eat-Da-Burger</h1>
  </div>
  <div class="col"></div>
</div>

<div class="row">
  <div class="col-sm-2"></div>
<div class="col">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
<div class="col"></div>
</div>

<div class="row">
<div class="col-sm-4"></div>
<div class="col">

<h4 align="center">Add a Burger</h4>
<form class="create-form">
  <div class="form-group">
    <label for="bu">Burger:</label>
    <input type="text" id="bu" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
</div>
<div class="col"></div>
</div>